env:
    browser: true
    es6: true
    jquery: true
    jest: true
extends: airbnb
parser: babel-eslint
parserOptions:
    ecmaVersion: 7
    ecmaFeatures:
        jsx: true
        experimentalObjectRestSpread: true
        experimentalDecorators: true,
    sourceType: module
rules:
    "react/prefer-stateless-function": [0, { "ignorePureComponents": true }]
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    "react/prop-types" : [0, { "ignore": ["match", "dispatch", "history", "location", "dispatch", "museum", "initial", "common", "error"] }]
    "class-methods-use-this": [0]
    "react/sort-comp": [0]
    "jsx-a11y/no-static-element-interactions": [1]
